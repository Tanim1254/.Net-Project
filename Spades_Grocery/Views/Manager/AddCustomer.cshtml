@model SpadesGroceryShop.Models.Customer
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<form action="" method="post">

    <h3>Customer Name: </h3> <input type="text" name="Name" value="@(Model !=null ? Model.Name: "")" />
    @Html.ValidationMessage("Name", new { @class = "text-danger" })<br />

    <h3>Customer Email: </h3><input type="email" name="Email" value="@(Model !=null ? Model.Email: "")" />
    @Html.ValidationMessage("Email", new { @class = "text-danger" })<br />

    <h3> Customer Phone: </h3> <input type="text" name="Phone" value="@(Model !=null ? Model.Phone: "")" />
    @Html.ValidationMessage("Phone", new { @class = "text-danger" })<br />

    <h3>customer Address: </h3> <input type="text" name="Address" value="@(Model !=null ? Model.Address: "")" />
    @Html.ValidationMessage("Address", new { @class = "text-danger" })<br />

    <br />
    <input type="submit" name="submit" class="btn btn-success" />
</form>

